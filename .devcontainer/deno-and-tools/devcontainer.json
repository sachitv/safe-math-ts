{
  "name": "Deno and Tools",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers-community/features/deno:1": {
      "version": "2.7.1"
    },
    "ghcr.io/sachitv/devcontainer-features/opencode:latest": {
      "version": "1.2.15"
    },
    "ghcr.io/sachitv/devcontainer-features/codex:1": {
      "release_tag": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "2.87.3"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    }
  },
  "mounts": [
    "source=${localEnv:HOME}/.config/opencode,target=/home/vscode/.config/opencode,type=bind,consistency=cached,readonly=true",
    "source=${localEnv:HOME}/.local/share/opencode/auth.json,target=/home/vscode/.local/share/opencode/auth.json,type=bind,consistency=cached,readonly=true",
    "source=${localEnv:HOME}/.codex/auth.json,target=/home/vscode/.codex/auth.json,type=bind,consistency=cached,readonly=true"
  ],
  "postCreateCommand": "bash .devcontainer/deno-and-tools/post-create.sh",
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "denoland.vscode-deno",
        "sst-dev.opencode",
        "openai.chatgpt"
      ]
    }
  }
}
